[Unit]
Description=observe-knock-conf
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/ubuntu/workspace/cron-conf/raspberrypi/bin
ExecStart=/home/ubuntu/workspace/cron-conf/raspberrypi/bin/observe-dnsmasq-toggle-conf --event create --file knock.conf --target /etc/dnsmasq.toggle --mode unlink
TimeoutSec=15
Restart=always

[Install]
WantedBy=default.target
