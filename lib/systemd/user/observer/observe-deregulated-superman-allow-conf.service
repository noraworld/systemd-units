[Unit]
Description=observe-deregulated-superman-allow-conf
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/ubuntu/workspace/cron-conf/raspberrypi/bin
ExecStart=/home/ubuntu/workspace/cron-conf/raspberrypi/bin/observe-dnsmasq-toggle-conf --event create --file deregulated_superman_allow.conf --target /etc/dnsmasq.priv/toggle --mode link
TimeoutSec=15
Restart=always

[Install]
WantedBy=default.target
