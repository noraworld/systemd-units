[Unit]
Description=observe-netplan-conf
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/ubuntu/workspace/cron-conf/raspberrypi/bin
ExecStart=/home/ubuntu/workspace/cron-conf/raspberrypi/bin/observe-dnsmasq-toggle-conf --event modify --target /home/ubuntu/workspace/envsman/raspberrypi/etc/netplan --mode file
TimeoutSec=15
Restart=always

[Install]
WantedBy=default.target
