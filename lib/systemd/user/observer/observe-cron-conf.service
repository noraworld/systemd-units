[Unit]
Description=observe-cron-conf
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/ubuntu/workspace/cron-conf/raspberrypi/bin
ExecStart=/home/ubuntu/workspace/cron-conf/raspberrypi/bin/observe-dnsmasq-toggle-conf --event create,modify,move,delete --target /home/ubuntu/workspace/cron-conf --mode file
TimeoutSec=15
Restart=always

[Install]
WantedBy=default.target
